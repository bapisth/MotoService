<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.urja.motoservice">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SignupActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DashboardActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".UserProfileActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".TestUserProfileActivity"
            android:label="@string/title_activity_test_user_profile"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".VehicleServiceListActivity"
            android:label="VehicleServiceListActivity"
            android:parentActivityName=".DashboardActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".ChooseServiceActivity"
            android:parentActivityName=".DashboardActivity"
            android:theme="@style/AppTheme.TextAppearance">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".DashboardActivity" />
        </activity>
        <activity
            android:name=".ConfirmRequestActivity"
            android:label="@string/title_activity_choose_service"
            android:parentActivityName=".ChooseServiceActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <!-- android:parentActivityName=".ChooseServiceActivity" -->
        </activity>
        <activity
            android:name=".ResetPasswordActivity"
            android:label="@string/title_activity_reset_password"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CustomerCarDetailsActivity"
            android:label="@string/title_activity_customer_car_details"
            android:parentActivityName=".ConfirmRequestActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.urja.motoservice.ConfirmRequestActivity" />
        </activity>
    </application>

</manifest>