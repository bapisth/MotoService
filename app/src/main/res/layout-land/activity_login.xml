            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/login_title"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="40dp"
                android:elevation="4dp"
                android:alpha="0.7"
                android:orientation="vertical"
                android:padding="20dp"
                android:layout_marginBottom="20dp"
                android:layout_margin="20dp"
                >

                    <ImageView
                        android:layout_width="@dimen/logo_w_h"
                        android:layout_height="@dimen/logo_w_h"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/app_logo"
                        android:tint="@color/white"
                        android:id="@+id/imageView9"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true" />

                   <!-- <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">-->

                    <EditText
                        android:id="@+id/password"
                        android:layout_width="282dp"
                        android:layout_height="50dp"
                        android:hint="@string/hint_password"
                        android:inputType="textPassword"
                        android:textColor="@color/textColorPrimary"
                        android:textColorHint="@color/textColorPrimary"
                        android:maxLines="1"
                        android:background="@color/white"
                        android:drawableLeft="@mipmap/ic_lock_outline_black_24dp"
                        android:drawableTint="@color/colorAccent"
                        android:layout_below="@+id/email"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="20dp" />
                    <EditText
                            android:id="@+id/email"
                            android:layout_width="282dp"
                            android:layout_height="50dp"
                        android:hint="@string/hint_email"
                            android:inputType="textEmailAddress"
                            android:drawableLeft="@mipmap/ic_account_circle_black_24dp"
                            android:drawableTint="@color/colorAccent"
                            android:textColor="@color/textColorPrimary"
                            android:textColorHint="@color/textColorPrimary"
                            android:background="@color/white"
                            android:maxLines="1"
                        android:layout_marginTop="20dp"
                        android:layout_below="@+id/imageView9"
                        android:layout_alignLeft="@+id/password"
                        android:layout_alignStart="@+id/password" />
                    <!--</android.support.design.widget.TextInputLayout>-->

                    <!--<android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">-->

                    <!--</android.support.design.widget.TextInputLayout>-->


                    <Button
                        android:id="@+id/btn_login"
                        android:layout_width="282dp"
                        android:layout_height="wrap_content"
                        android:background="@color/colorAccent"
                        android:text="@string/btn_login"
                        android:textColor="@android:color/black"
                        android:elevation="0dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignLeft="@+id/password"
                        android:layout_alignStart="@+id/password" />

                <Button
                    android:id="@+id/btn_reset_password"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_background"
                    android:text="@string/btn_forgot_password"
                    android:textAppearance="@style/AppTheme.ItemStyle"
                    android:fontFamily="cursive"
                    android:layout_above="@+id/btn_login"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignLeft="@+id/btn_signup"
                    android:layout_alignStart="@+id/btn_signup" />

                <!--&lt;!&ndash; Link to Login Screen &ndash;&gt;-->

                <Button
                    android:id="@+id/btn_signup"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_background"
                    android:text="@string/btn_link_to_register"
                    android:padding="@dimen/dp_4"
                    android:textAppearance="@style/AppTheme.ItemStyle"
                    android:fontFamily="cursive"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/imageView9"
                    android:layout_toEndOf="@+id/imageView9" />
            </RelativeLayout>

