<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.urja.motoservice.CustomerCarDetailsActivityFragment"
    tools:showIn="@layout/activity_customer_car_details">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/address_container">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Customer Address"
            android:gravity="left|center_vertical"
            android:background="@drawable/button_background"
            android:id="@+id/label_customer"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:layout_below="@id/label_customer">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/edittext_background"/>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/address_container"
        android:id="@+id/car_container">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Car Number"
            android:gravity="left|center_vertical"
            android:background="@drawable/button_background"
            android:id="@+id/label_car_number"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:layout_below="@id/label_car_number">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edittext_background"/>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/address_container"
        android:id="@+id/mobile_container">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Mobile Number"
            android:gravity="left|center_vertical"
            android:background="@drawable/button_background"
            android:id="@+id/label_mobile_number"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:layout_below="@id/label_mobile_number">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edittext_background"/>
        </RelativeLayout>
    </RelativeLayout>




</RelativeLayout>
