<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="3dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardPreventCornerOverlap="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="10dp">

        <FrameLayout
            android:id="@+id/imgView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="top"
            android:background="@color/material_drawer_accent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:textAllCaps="true"
                        android:textSize="20sp"
                        android:id="@+id/carNumber"
                        android:textColor="@color/white"
                        android:text="@string/title_activity_test_user_profile"
                        android:paddingBottom="@dimen/dp_10"
                        android:layout_weight="4"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:textAllCaps="false"
                        android:layout_alignParentRight="true"
                        android:textSize="20sp"
                        android:id="@+id/totalAmount"
                        android:textColor="@color/white"
                        android:paddingLeft="@dimen/dp_10"
                        />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_below="@id/totalAmount"
                    android:layout_height="45dp"
                    android:textAllCaps="true"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textColor="@color/white"
                    android:id="@+id/transactionID"
                    android:text=""/>
            </RelativeLayout>
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="18sp"
            android:textColor="@color/material_drawer_accent"
            android:id="@+id/transactionDate" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="16sp"
            android:textColor="@color/material_drawer_accent"
            android:id="@+id/transactionStatus" />
    </LinearLayout>

</android.support.v7.widget.CardView>
